								},
								"sink": {
									"name": "Prop_0"
								}
							},
							{
								"source": {
									"type": "String",
									"ordinal": 2
								},
								"sink": {
									"name": "Prop_1"
								}
							},
							{
								"source": {
									"type": "String",
									"ordinal": 3
								},
								"sink": {
									"name": "Prop_2"
								}
							},
							{
								"source": {
									"type": "String",
									"ordinal": 4
								},
								"sink": {
									"name": "Prop_3"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "payments",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "bronze_payments",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
